[ -n "${VZEXECLIB_VERSION:-}" ] && return 0;
VZEXECLIB_VERSION="0.1";

declare __CTID=""
#stdout from last command
declare __STDOUT
#stderr from last command
declare __STDERR
declare __ERRCODE

$PROGRAM 'vzctl';
$PROGRAM 'vzlist';

__EXEC="$VZCTL exec2"

function vzexecSetCTID() {
    __CTID=$1
}

# return 0 if success
# return 99 if missing param
# otherwise returns a code from called program
function vzexecRun() {
    local buffer;
    if [ -z "$__CTID" ] ; then
        log "unknown __CTID. Please set it via vzexecSetCTID first";
        return 99;
    fi

    local _tmperr

    _tmperr=$(mktemp -u --tmpdir=/tmp)

    __STDOUT=$( set -f ; $__EXEC $__CTID "$*" 2>$_tmperr; );
    __ERRCODE=$?
    __STDERR=$(<$_tmperr)
    rm $_tmperr
    return $__ERRCODE
}

function vzexecGetLastStdErr() {
    echo "${__STDERR}"
}

function vzexecGetLastStdOut() {
    echo "${__STDOUT}"
}

function vzexecGetLastErrCode() {
    echo $__ERRCODE
}
